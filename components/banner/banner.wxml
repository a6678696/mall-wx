<!--components/banner/banner.wxml-->
<view class="banner">
    <swiper class="swiper" indicator-dots indicator-active-color="#ff6200" circular autoplay interval="3000">
        <swiper-item wx:for="{{swiperImageList}}" wx:key="id">
            <navigator url="{{item.url}}">
                <image class="image" mode="widthFix" src="{{item.imageUrl}}"></image>
            </navigator>
        </swiper-item>
    </swiper>
</view>